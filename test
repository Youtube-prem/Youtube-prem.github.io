    <!-- CONTACT -->
    <section id="contact" class="full">
      <h2>문의하기</h2>
      <p class="sub" style="margin-top:0;">
        질문/상담이 필요하면 아래 폼을 작성 후 전송하세요. (메일 앱이 열리도록 구성)
      </p>

      <form class="form" id="contactForm">
        <div>
          <label for="name">이름(또는 닉네임)</label>
          <input id="name" name="name" placeholder="홍길동" required />
        </div>
        <div>
          <label for="contactInfo">연락처(이메일/카톡ID 등)</label>
          <input id="contactInfo" name="contactInfo" placeholder="example@email.com" required />
        </div>
        <div class="row2">
          <label for="msg">문의 내용</label>
          <textarea id="msg" name="msg" placeholder="궁금한 점을 적어주세요." required></textarea>
        </div>

        <div class="row2 actions">
          <button type="submit" class="primary">메일로 전송</button>
          <button type="button" class="ghost" id="copyBtn">문의내용 복사</button>
        </div>
      </form>

      <div class="note">
        <b>메일 수신 주소 설정:</b> 아래 스크립트의 <code>TO_EMAIL</code> 값을 본인 이메일로 바꾸세요.
      </div>
    </section>

    <div class="footer">
      © <span id="y"></span> 안내 페이지 · 업데이트는 언제든 가능
    </div>
  </div>

  <script>
    // ✅ 여기만 본인 이메일로 바꾸면 됨
    const TO_EMAIL = "https://open.kakao.com/o/gBpNh0ei";

    const form = document.getElementById("contactForm");
    const copyBtn = document.getElementById("copyBtn");
    const y = document.getElementById("y");
    y.textContent = new Date().getFullYear();

    function buildMailto(name, contactInfo, msg){
      const subject = `[문의] Premium 안내 페이지 - ${name}`;
      const body =
`이름/닉네임: ${name}
연락처: ${contactInfo}

문의 내용:
${msg}

(이 메일은 웹페이지 문의 폼에서 생성되었습니다.)`;

      const url = `mailto:${encodeURIComponent(TO_EMAIL)}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
      return url;
    }

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const name = document.getElementById("name").value.trim();
      const contactInfo = document.getElementById("contactInfo").value.trim();
      const msg = document.getElementById("msg").value.trim();

      if(!name || !contactInfo || !msg){
        alert("모든 항목을 입력하세요.");
        return;
      }
      window.location.href = buildMailto(name, contactInfo, msg);
    });

    copyBtn.addEventListener("click", async () => {
      const name = document.getElementById("name").value.trim();
      const contactInfo = document.getElementById("contactInfo").value.trim();
      const msg = document.getElementById("msg").value.trim();

      const text =
`[문의 요약]
이름/닉네임: ${name}
연락처: ${contactInfo}
내용: ${msg}`;

      try{
        await navigator.clipboard.writeText(text);
        alert("복사 완료. 원하는 곳에 붙여넣으세요.");
      }catch(err){
        alert("복사에 실패했습니다. 브라우저 권한을 확인하세요.");
      }
    });
  </script>
